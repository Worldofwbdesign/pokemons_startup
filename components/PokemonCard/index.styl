  flex 1
  flex-basis auto
  min-width 200px
  max-width 420px
  width 100%
  align-items center
  margin-top 2u
  +tablet()
    justify-content space-between
    flex-wrap wrap

  &.gridElem
    margin-left 2u
    +tablet()
      flex 1 1 0px
      max-width 236px

.avatar
  width 100px
  height 100px
  margin-top 2u

.stats
  margin-top 2u

.order
  text-align center

.tag
  height 30px
  width 80px
  margin-top 1u

.fullStats
  flex 1
  flex-basis auto
  width 100%
  margin-top 2u
  align-items center

.other
  margin-top 1u

.btns
  flex 1
  flex-direction row
  justify-content space-between
  flex-basis auto
  width 100%
  margin-top 4u

  &--center
    justify-content center

.editBtn
  width 140px